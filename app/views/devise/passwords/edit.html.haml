.row
  .col-sm-4.col-sm-offset-4
    .panel.panel-default
      .panel-heading
        %h2.panel-title Change your password
      .panel-body
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
          = devise_error_messages!
          = f.hidden_field :reset_password_token
          .form-group
            = f.label :password, "New password"
            = f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', required: true
          .form-group
            = f.label :password_confirmation, "Confirm new password"
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true
          .form-group
            = f.submit "Change my password", class: 'btn btn-primary btn-block'
