.row
  .col-sm-6.col-sm-offset-3
    .panel.panel-default
      .panel-heading
        %h2.panel-title Sign up
      .panel-body
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .form-group
            = f.label :email, class: 'control-label'
            = f.email_field :email, autofocus: true, class: 'form-control', required: true

          .form-group
            = f.label :password, class: 'control-label'
            = f.password_field :password, autocomplete: "off", class: 'form-control', required: true
            - if @validatable
              %small.help-block #{@minimum_password_length} characters minimum

          .form-group
            = f.label :password_confirmation, class: 'control-label'
            = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', required: true

          .form-group
            = f.submit "Sign up", class: 'btn btn-primary', data: {disable_with: "Loading..."}
        %hr
          .text-center
            Already have an account?
            = link_to "Log in here", new_session_path(resource_name)
